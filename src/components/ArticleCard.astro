---
import { type CollectionEntry } from "astro:content";

type Props = {
  post: CollectionEntry<"blog">;
};

const { data: { title, description}, slug } = Astro.props.post
---

<article>
<a href=`/blog/${slug}`>
  <h2>{title}</h2>
  <p>{description}</p>
</a>
</article>

<style>
  article {
    padding: 1em;
    border: 1px solid darkslategray;
    border-radius: 0.5rem;
  }
</style>
