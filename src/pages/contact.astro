---
import Main from "../layouts/Main.astro";
const pageName: string =  "Contact";
---
<Main {pageName}>
  <p>Feel free to reach out to me at <a href="mailto:{{ metadata.email }}">test</a> or on <a href="https://twitter.com/{{ metadata.twitter }}">Twitter</a>.</p>
  <p>Alternatively, you can use the form below to send me a message:</p>
  <form name="contact" method="POST" data-netlify="true">
    <input type="hidden" name="form-name" value="contact" />
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required />
    <label for="email">Email:</label>
    <input type="email" name="email" id="email" required />
    <label for="message">Message:</label>
    <textarea name="message" id="message" required></textarea>
    <button type="submit">Send</button>
  </form>
</Main>