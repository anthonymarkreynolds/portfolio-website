---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, description } = Astro.props;
---

<html lang="en">
  <head>
    <Head title={title} description={description} />
    <style>
      main {
        flex-grow: 1;
      }
    </style>
  </head>
  <body>
    <Header title={title} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

